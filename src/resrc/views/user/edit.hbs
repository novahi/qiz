  <div class="main">

  <form method="POST" class="form" id="form">
    <h3 class="heading">Chỉnh sửa thông tin</h3>

    <div class="spacer"></div>

    <div class="form-group">
      <label for="username" class="form-label">Họ và tên</label>
      <input id="username" name="username" type="text" value="{{user.name}}" class="form-control">
      <span class="form-message"></span>
    </div>

    <div class="form-group">
      <label for="age" class="form-label">Tuổi</label>
      <input id="age" name="age" type="text" value={{user.age}}  class="form-control">
      <span class="form-message"></span>
    </div>
    
    <div class="form-group">
      <label for="address" class="form-label">Địa chỉ</label>
      <input id="address" name="address" type="text" value={{user.address}}  class="form-control">
      <span class="form-message"></span>
    </div>
    
    <div class="form-group">
      <label for="facebook" class="form-label">ID Facebook</label>
      <input id="facebook" name="facebook" type="text" value={{user.facebook}}  class="form-control">
      <span class="form-message"></span>
    </div>
    
    <div class="form-group">
      <label for="slug" class="form-label">Username</label>
      <input id="slug" name="slug" type="text" value={{user.slug}}  class="form-control">
      <span class="form-message"></span>
    </div>
    
    <button class="form-submit">Lưu</button>
  </form>

</div>